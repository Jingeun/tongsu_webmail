<!-- users/edit -->

<style type="text/css">
.form-control{
  width: 80%;
  font-size: 12px;
}
.form-group{
  margin-bottom:7px;
}
.sign_up_font{
  font-size: 16px;
}
.widget-body{
  padding: 10px 10px 0px 20px;
  margin-bottom: 20px;
}
</style>

<div class="content-wrap">
    <main id="content" class="content" role="main">
        <div class="row">
            <div class="col-lg-5 col-sm-8 col-xs-10 col-lg-offset-3 col-sm-offset-4 col-xs-offset-1" style="min-width:500px;">
                
                <section class="widget widget-login animated fadeInUp">
                <h2 class="widget-login-logo animated fadeInUp" style="margin-top:0px;">
                    Edit <%= resource_name.to_s.humanize %>
                </h2>  
                    <%= form_for(resource, as: resource_name, class: "login-form mt-lg", url: registration_path(resource_name), html: { method: :put }) do |f| %>
                         <%= devise_error_messages! %>
                         <div class="widget-body">
                              <div class="form-group">
                                  <%= f.label :ID, class: "sign_up_font" %> &nbsp <em style="font-size: 12px">( 영문자, 숫자, _만 입력 가능, 최소 3자 이상 입력하세요. )</em><br />
                                  <%= f.text_field :user_id, autofocus: true, class: "form-control", style: "display:inline;", placeholder: "※ 영문자, 숫자, _만 입력 가능, 최소 3자 이상 입력하세요." %>
                              </div>
                              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                                    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
                              <% end %>
                              <div class="form-group">
                                  <%= f.label :password, class: "sign_up_font" %>
                                  <i>(leave blank if you don't want to change it)</i><br />
                                  <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
                              </div>
                              <div class="form-group">
                                  <%= f.label :password_confirmation, class: "sign_up_font" %><br />
                                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "※ 비밀번호 확인" %>
                              </div>
                              <div class="form-group">
                                  <%= f.label :current_password, class: "sign_up_font" %> <i>(we need your current password to confirm your changes)</i><br />
                                  <%= f.password_field :current_password, class: "form-control",autocomplete: "off" %>
                              </div>
                         </div>
                         <div class="widget-body">
                              <div class="form-group">
                                  <%= f.label :Name, class: "sign_up_font" %>
                                  <%= f.text_field :name, class: "form-control", placeholder: "이름" %>
                              </div>
                              <div class="form-group">
                                  <%= f.label :Sex, class: "sign_up_font" %></br>
                                  <div class="btn-group" data-toggle="buttons">
                                      <label class="btn btn-default" style="padding: 6px 15px 6px 15px">
                                          <input type="radio" autocomplete="off" name="user[sex]" value="man"> 남자
                                      </label>
                                      <label class="btn btn-default" style="padding: 6px 15px 6px 15px">
                                          <input type="radio" autocomplete="off" name="user[sex]" value="woman"> 여자
                                      </label>
                                  </div>
                              </div>
                              <div class="form-group">
                                  <%= f.label :email, class: "sign_up_font" %>
                                  <%= f.email_field :email, class: "form-control", placeholder: "example@mailing-list.tk" %>
                              </div>
                              <div class="form-group">
                                  <%= f.label :phone, class: "sign_up_font" %>
                                  <%= f.text_field :phone, class: "form-control", placeholder: "'-' 없이 입력하세요." %>
                              </div>
                         </div>

                         <table style="margin-left:20px; width:77%;">
                              <td>
                                  <%= f.submit "Update", class: "btn btn-success btn-sm", style: "display:inline; font-size:14px;" %>
                              </td>
                              <td style="float:right">
                                  <h3 style="margin:0 0 10px 0;">* Delete my account</h3>
                                  <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
                              </td>
                         </table>
                         
                        <% end %>
                    </div>
                </section>
            </div>
        </div>
    </main>
</div>