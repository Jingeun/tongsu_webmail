<% @replys.each do |r| %>
<li>
    <span class="thumb-xs avatar pull-left mr-sm">
        <img class="img-circle" src="<%= asset_path 'avatar.png' %>">
    </span>
    <div class="comment-body">
        <h6 class="author fw-semi-bold"><%= r.from_name.nil? ? r.from.split("@").first.titleize : r.from_name %> <small style="margin-left:8px;"><%= time_ago_in_words(r.created_at) %> ago</small></h6>
        <p><%= Nokogiri::HTML::DocumentFragment.parse(r.content).to_html.html_safe %></p>
    </div>
</li>
<% end %>

<li>
    <span class="thumb-xs avatar pull-left mr-sm">
        <img class="img-circle" src="<%= asset_path 'avatar.png' %>">
    </span>
    <div class="comment-body">
        <textarea rows="4" class="form-control" id="wysiwyg"></textarea>
        <div class="btn-toolbar">
            <button type="button" class="btn btn-sm btn-default pull-right">Clear</button>
            <button type="button" class="btn btn-sm btn-danger pull-right">Save</button>
        </div>
    </div>
</li>