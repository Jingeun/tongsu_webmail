<div class="content-wrap">
    <!-- main page content. the place to put widgets in. usually consists of .row > .col-md-* > .widget.  -->
    <main id="content" class="content" role="main">
        <ol class="breadcrumb">
            <li>Home</li>
            <li class="active">Importing</li>
        </ol>
        <h1 class="page-title">Form - <span class="fw-semi-bold">Validation</span></h1>
        <div class="row">
            <div class="col-md-8 col-md-offset-1">
                <section class="widget">
                    <div class="widget-body">
                        <%= form_for @import, html: { class: "form-horizontal form-label-left", id: "validation-form", "data-parsley-priority-enabled": "false", novalidate: "novalidate" } do |f| %>
                            <fieldset>
                                <legend>
                                    <span class="label label-warning  text-gray-dark mr-xs">
                                        POP3
                                    </span>
                                    input types supported
                                </legend>
                                	<div class="form-group">
                                		<label class="control-label col-sm-3" for="email">
                                            E-mail
                                        </label>
	                                	<div class="col-sm-9">
	                                        <div class="radio">
	                                            <input type="radio" name="mailtype" id="radio1" value="gmail" checked>
	                                            <label for="radio1">
	                                                Gmail
	                                            </label>
	                                        </div>
	                                        <div class="radio">
	                                            <input type="radio" name="mailtype" id="radio2" value="naver">
	                                            <label for="radio2">
	                                                Naver
	                                            </label>
	                                        </div>
	                                    </div>
	                                </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="email">
                                            E-mail
                                        </label>
                                        <div class="col-sm-9">
                                            <input type="email" id="email" name="email" class="form-control"
                                                   data-parsley-trigger="change"
                                                   data-parsley-validation-threshold="1"
                                                   required="required">
		                                    <span class="help-block">
		                                        Please input your E-mail address instead of ID
		                                    </span>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label col-sm-3" for="password">
                                            Password
                                        </label>
                                        <div class="col-sm-9">
                                            <input type="password" id="password" name="password" class="form-control mb-sm"
                                                   data-parsley-trigger="change"
                                                   required="required">
                                            <input type="password" id="password-r" name="password-r" class="form-control"
                                                   data-parsley-trigger="change"
                                                   data-parsley-equalto="#password"
                                                   required="required">
                                        </div>
                                    </div>
                            </fieldset>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-danger btn-rounded pull-right">Validate &amp; Submit</button>
                                <button type="button" class="btn btn-default btn-rounded">Cancel</button>
                            </div>
                        <% end %>
                    </div>
                </section>
            </div>
        </div>
    </main>
</div>

<script src="/assets/common/parsley.min.js"></script>
<script src="/assets/common/form-validation.js"></script>